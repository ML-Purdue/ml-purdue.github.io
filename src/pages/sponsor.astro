---
import "@fontsource/inter/variable.css";
import Footer from "~/components/footer.astro";
import Header from "~/components/header.astro";
import "~/styles/index.css";
import ContentSection from "~/components/content-section.astro";

import dagshub from "~/assets/sponsor/dagshub.png";
import janestreet from "~/assets/sponsor/janestreet.png";
import uniformsierra from "~/assets/sponsor/uniformsierra.png";
import teconnectivity from "~/assets/sponsor/TE_Connectivity_logo.png";
import numerade from "~/assets/sponsor/numerade.png";

const { site } = Astro;
const description = "ML@Purdue Sponsorship";
---

<!DOCTYPE html>
<html lang="en" class="h-full motion-safe:scroll-smooth" data-theme="dark">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <!-- <meta name="generator" content={generator} /> -->

    <title>ML@Purdue - Sponsorship</title>
    <meta name="description" content={description} />

    <!-- social media -->
    <meta property="og:title" content="ML@Purdue" />
    <meta property="og:type" content="website" />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="/social.png" />
    <meta property="og:url" content={site} />
    <meta name="twitter:card" content="summary_large_image" />
  </head>
  <body
    class="h-full overflow-x-hidden bg-default text-default text-base selection:bg-secondary selection:text-white"
  >
    <Header fixed />
    <br />
    <article class="pt-10 mt-11 w-[90vw] max-w-[80ch]">
      <ContentSection id="sponsors-title" title="SPONSORS">
        <div
          class="flex w-screen border-y-[1px] -mt-6 border-purple-500 pl-8 py-6"
        >
          <p class="max-w-[75%] text-start text-sm">
            We thank all of our sponsors for supporting us and helping us achieve
            our mission! To learn more about who we are, our mission, and our
            sponsorship tiers, please view our 
            <a href="/ML@P_Sponsorship_Packet.pdf" target="_blank" class="font-black">
              sponsorship packet
            </a>.
          </p>
        </div>

        <div class="flex w-screen border-b-[1px] border-purple-500 h-[32vh]">
          <div class="flex flex-col justify-between items-end border-r-[1px] h-[34vh] w-[26vw] -mt-4 text-right border-purple-500 p-4">
            <h1 class="sponsor-t4 orbitron text-xl">
              TIER <span class="font-bold text-4xl">4</span>
            </h1>
            <h2 class="sponsor-t4 text-sm font-semibold leading-tight mb-2">ML@P Maestro</h2>
          </div>
          <div class="ml-3 flex flex-col sm:flex-row">
            <img 
              src={dagshub.src} 
              alt="DagsHub" 
              class="w-[60vw] sm:w-[35vw] pl-4 md:pl-10 rounded-md object-contain" 
            />
            <img
              src={uniformsierra.src}
              alt="Uniform Sierra"
              class="w-[60vw] sm:w-[35vw] mt-5 -mr-11 rounded-md object-contain"
            />
          </div>
        </div>

        <div class="flex w-screen border-b-[1px] border-purple-500 h-[32vh]">
          <div class="flex flex-col justify-between items-end border-r-[1px] h-[34vh] w-[26vw] -mt-4 text-right border-purple-500 p-4">
            <h1 class="sponsor-t3 orbitron text-xl">
              TIER <span class="font-bold text-4xl">3</span>
            </h1>
            <h2 class="sponsor-t3 text-sm  font-semibold leading-tight mb-2">Neural Network Ninja</h2>
          </div>
        </div>

        <div class="flex w-screen border-b-[1px] border-purple-500 h-[32vh]">
          <div class="flex flex-col justify-between items-end border-r-[1px] h-[34vh] w-[26vw] -mt-4 text-right border-purple-500 p-4">
            <h1 class="sponsor-t2 orbitron text-xl">
              TIER <span class="font-bold text-4xl">2</span>
            </h1>
            <h2 class="sponsor-t2 text-sm font-semibold leading-tight mb-2">SVM Sorcerer</h2>
          </div>
        </div>

        <div class="flex w-screen border-b-[1px] border-purple-500 h-[32vh]">
          <div class="flex flex-col justify-between items-end border-r-[1px] h-[34vh] w-[26vw] -mt-4 text-right border-purple-500 p-4">
            <h1 class="sponsor-t1 orbitron text-xl">
              TIER <span class="font-bold text-4xl">1</span>
            </h1>
            <h2 class="sponsor-t1 text-sm font-semibold leading-tight mb-2">Perceptron Pro</h2>
          </div>
          <div class="flex flex-col sm:flex-row">
            <img
              src={janestreet.src}
              alt="Jane Street"
              class="w-[43vw] sm:w-[23vw] ml-4 md:ml-10 rounded-md object-contain"
              style="filter:invert(1)"
            />
            <img
              src={teconnectivity.src}
              alt="TE Connectivity"
              class="w-[30vw] sm:w-[20vw] mt-3 ml-5 rounded-md object-contain"
            />
            <img 
              src={numerade.src} 
              alt="Numerade" 
              class="w-[43vw] sm:w-[23vw] rounded-md object-contain" 
            />
          </div>
        </div>
        <br />
      </ContentSection>
    </article>
    
    <Footer />
  </body>
</html>
