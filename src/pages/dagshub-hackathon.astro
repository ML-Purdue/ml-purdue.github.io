---
import "@fontsource/inter/variable.css";
import Footer from "~/components/footer.astro";
import Header from "~/components/header.astro";
import "~/styles/index.css";
import ContentSection from "~/components/content-section.astro";
import Spacer from "~/components/Spacer.astro";
import dagshub from "~/assets/sponsor/dagshub.png";
import mlPurdue from "~/assets/mlp.png";

const { site } = Astro;
const description = "ML@Purdue DagsHub Hackathon";
---

<!DOCTYPE html>
<html lang="en" class="h-full motion-safe:scroll-smooth" data-theme="dark">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <!-- <meta name="generator" content={generator} /> -->

    <title>ML@Purdue - DagsHub Hackathon</title>
    <meta name="description" content={description} />

    <!-- social media -->
    <meta property="og:title" content="ML@Purdue" />
    <meta property="og:type" content="website" />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="/social.png" />
    <meta property="og:url" content={site} />
    <meta name="twitter:card" content="summary_large_image" />
  </head>
  <body
    class="h-full overflow-x-hidden bg-default text-default text-base selection:bg-secondary selection:text-white"
  >
    <Header fixed />
    <article class="mx-auto mt-20 w-[90vw] max-w-[80ch]">
      <ContentSection
        id="dagshub-hackathon-title"
        title="ML@Purdue x DagsHub Hackathon"
      >
        <div
          class="mb-8 grid h-32 w-3/4 grid-cols-1 justify-items-center md:mb-0 md:grid-cols-2"
        >
          <img src={mlPurdue.src} alt="ML@Purdue Logo" class="h-24 w-auto" />
          <img src={dagshub.src} alt="DagsHub" class="h-24 w-auto" />
        </div>
        <div class="justify-stretch grid w-1/2 grid-cols-2 md:grid-cols-4">
          <div class="grid h-32 grid-rows-3 items-center text-center">
            <span></span>
            <span class="font-extrabold text-6xl"></span>
            <span class="">days</span>
          </div>
          <div class="grid h-32 grid-rows-3 items-center text-center">
            <span></span>
            <span class="font-extrabold text-6xl"></span>
            <span class="">hours</span>
          </div>
          <div class="grid h-32 grid-rows-3 items-center text-center">
            <span></span>
            <span class="font-extrabold text-6xl"></span>
            <span class="">minutes</span>
          </div>
          <div class="grid h-32 grid-rows-3 items-center text-center">
            <span></span>
            <span class="font-extrabold text-6xl"></span>
            <span class="">seconds</span>
          </div>
        </div>
        <Spacer y={8} />
        <div class="text=center w-64">
          <a
            href="https://docs.google.com/forms/d/e/1FAIpQLScM9qaHlyeKWGbrzTf-uOS36t9xAME_V9gxmjkQSe0UvMgTAg/viewform"
            target="_blank"
            class="flex items-center justify-center gap-3 rounded-lg border-2 border-purple-600 bg-gray-800 px-6 py-4 hover:bg-purple-900 hover:text-current"
          >
            <span>Register</span>
          </a>
        </div>
      </ContentSection>
      <Spacer y={48} />
      <ContentSection id="dh-about" title="About">
        <p class="w-[75vw] text-justify">
          The ML@Purdue x DagsHub Hackathon is our club's <strong
            >first ever corporate event</strong
          >! Join us for three weeks of hacking new state-of-the-art solutions,
          MLOps workshops and replication studies guided by ML@Purdue and
          DagsHub support teams. Best teams win swag and cash prizes! We have
          two competitive tracks:
        </p>
        <Spacer y={16} />
        <div
          class="grid w-[75vw] grid-cols-1 gap-8 text-center md:grid-cols-2 md:gap-24"
        >
          <div>
            <h1 class="h-16 font-bold text-xl">Guided</h1>
            <div>
              <p class="text-justify">
                Build a state-of-the-art Machine Learning Model! Participate in
                a graph generation challenge with multimodal data! Obtain the
                best possible performance on our event leaderboard, and the
                three best-performing models on unseen data win prizes!
              </p>
            </div>
          </div>
          <div>
            <h1 class="h-16 font-bold text-xl">Advanced</h1>
            <div>
              <p class="text-justify">
                Reimplement a state-of-the-art machine learning paper, run
                ablation studies, make it accessible to the entire machine
                learning community and publish it as a paper under your name!
                The three most successful projects also win prizes!
              </p>
            </div>
          </div>
        </div>
        <br />
        <p class="w-[75vw] text-justify">
          Specifics regarding delivarables are listed below!
        </p>
      </ContentSection>
      <Spacer y={48} />
      <ContentSection id="dh-details" title="Details">
        <h1 class="gradient-text font-bold text-3xl">Prizes</h1>
        <div
          class="grid w-[75vw] grid-cols-1 gap-8 text-center md:w-[45vw] md:grid-cols-2 md:gap-24"
        >
          <div>
            <h1 class="h-16 font-bold text-xl">Guided</h1>
            <div>
              <ul>
                <li>1st Place: $75 + SWAG</li>
                <li>2nd Place: SWAG</li>
                <li>3rd Place: SWAG</li>
              </ul>
            </div>
          </div>
          <div>
            <h1 class="h-16 font-bold text-xl">Advanced</h1>
            <div>
              <ul>
                <li>1st Place: $150 + SWAG</li>
                <li>2nd Place: $100 + SWAG</li>
                <li>3rd Place: SWAG</li>
              </ul>
            </div>
          </div>
        </div>
        <br />
        <h1 class="gradient-text font-bold text-3xl">Locations & Timeline</h1>
        <ul class="flex flex-col items-center justify-center">
          <!-- <li>Oct 14: Kickoff & Onboarding to DagsHub and Colab 101</li>
                <li>Oct 21: Data Engine & Office Hours</li>
                <li>Oct 28: Competition Midnight & Office Hours</li>
                <li>Nov 4: Submission Date & Office Hours</li>
                <li>Nov 11: Closing Ceremony & Winner Announcement</li> -->
        </ul>
        <div class="timeline">
          <div class="right container">
            <div class="content">
              <h1 class="font-bold text-lg">October 14 (CL50 224)</h1>
              <p>
                <span class="italic">Optional</span> Team Finding Event <span
                  class="font-bold">@ 4pm</span>
              </p>
              <p>
                Kick-off Ceremony & Workshops <span class="font-bold"
                  >@ 5-8pm</span>
              </p>
            </div>
          </div>
          <div class="right container">
            <div class="content">
              <h1 class="font-bold text-lg">October 21 (BRNG 2280)</h1>
              <p>
                Data Engine & Office Hours <span class="font-bold"
                  >@ 5-8pm</span>
              </p>
            </div>
          </div>
          <div class="right container">
            <div class="content">
              <h1 class="font-bold text-lg">October 28 (BRNG 2280)</h1>
              <p>
                Competition Midnight & Office Hours <span class="font-bold"
                  >@ 5-8pm</span>
              </p>
            </div>
          </div>
          <div class="right container">
            <div class="content">
              <h1 class="font-bold text-lg">November 4 (BRNG 2280)</h1>
              <p>
                Submission Date & Office Hours <span class="font-bold"
                  >@ 5-8pm</span>
              </p>
            </div>
          </div>
          <div class="right container">
            <div class="content">
              <h1 class="font-bold text-lg">November 11 (CL50 224)</h1>
              <p>
                Closing Ceremony & Winners <span class="font-bold"
                  >@ 5-8pm</span>
              </p>
            </div>
          </div>
        </div>
        <br />
        <!-- <h1 class="font-bold text-3xl gradient-text">Location and Timing</h1>
            <p><a class="underline dotted" target="_blank" href="https://maps.app.goo.gl/tr9WSCP8FFGqioD79">BRNG 2280</a>, 5pm - 8pm for all dates!
            <br /> -->
        <h1 class="gradient-text font-bold text-3xl">Competition Tracks</h1>

        <div
          class="grid w-[75vw] grid-cols-1 gap-8 text-justify md:grid-cols-2 md:gap-24"
        >
          <div>
            <h1 class="h-16 text-center font-bold text-xl">Guided</h1>
            <div>
              <ul class="list-disc">
                <li>Participate in a graph generation challenge!</li>
                <li>
                  Template for an end-to-end workflow with baseline performance
                  will be provided.
                </li>
                <li>
                  Log data, experiments and notebooks to your DagsHub
                  repository.
                </li>
                <li>
                  Model performance will be evaluated on a hidden test set.
                </li>
                <li>Top 3 highest scores win prizes!</li>
              </ul>
            </div>
          </div>
          <div>
            <h1 class="h-16 text-center font-bold text-xl">Advanced</h1>
            <div>
              <ul class="list-disc">
                <li>
                  Get to publish a paper under the Machine Learning
                  Reproducibility Challenge!
                </li>
                <li>
                  Reproduce novel research from our approved list of papers.
                </li>
                <li>
                  Conduct ablation studies and write a reproducibility report
                  documenting your findings
                </li>
                <li>
                  Your reproducibility report can get published to ReScience
                  (platinum open-access peer-reviewed journal)!
                </li>
                <li>3 best papers win prizes!</li>
              </ul>
            </div>
          </div>
        </div>

        <br />
      </ContentSection>
    </article>
    <Footer />
  </body>

  <script>
    let targetDate = new Date(2023, 10, 4, 20, 0); // 2023-10-14 15:00:00, TBD
    let dayElements = document.querySelectorAll(
      "#dagshub-hackathon-title .grid-rows-3 .text-6xl"
    );
    function updateDate() {
      let currentDate = new Date();
      let diff = targetDate - currentDate;
      let days = Math.floor(diff / (1000 * 60 * 60 * 24));
      let hours = Math.floor((diff % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
      let minutes = Math.floor((diff % (1000 * 60 * 60)) / (1000 * 60));
      let seconds = Math.floor((diff % (1000 * 60)) / 1000);
      dayElements[0].innerHTML = Math.max(0, days);
      dayElements[1].innerHTML = Math.max(0, hours);
      dayElements[2].innerHTML = Math.max(0, minutes);
      dayElements[3].innerHTML = Math.max(0, seconds);
    }
    updateDate();
    setInterval(updateDate, 1000);
  </script>

  <style>
    .timeline,
    .container,
    .right,
    .left,
    .content {
      box-sizing: border-box;
    }

    /* The actual timeline (the vertical ruler) */
    .timeline {
      position: relative;
      max-width: 1200px;
      margin: 0 auto;
    }

    /* The actual timeline (the vertical ruler) */
    .timeline::after {
      content: "";
      position: absolute;
      width: 6px;
      background-color: white;
      top: 0;
      bottom: 0;
      left: 0%;
      margin-left: -6px;
    }

    /* Container around content */
    .container {
      padding: 10px 40px;
      position: relative;
      background-color: inherit;
      width: 50%;
    }

    /* The circles on the timeline */
    .container::after {
      content: "";
      position: absolute;
      width: 25px;
      height: 25px;
      right: -17px;
      background-color: var(--color-primary);
      border: 4px solid var(--color-secondary);
      top: 15px;
      border-radius: 50%;
      z-index: 1;
    }

    /* Place the container to the left */
    .left {
      left: 0;
    }

    /* Place the container to the right */
    .right {
      left: 0%;
    }

    /* Add arrows to the left container (pointing right) */
    .left::before {
      content: " ";
      height: 0;
      position: absolute;
      top: 22px;
      width: 0;
      z-index: 1;
      right: 30px;
      border: medium solid white;
      border-width: 10px 0 10px 10px;
      border-color: transparent transparent transparent white;
    }

    /* Add arrows to the right container (pointing left) */
    .right::before {
      content: " ";
      height: 0;
      position: absolute;
      top: 22px;
      width: 0;
      z-index: 1;
      left: 30px;
      border: medium solid white;
      border-width: 10px 10px 10px 0;
      border-color: transparent white transparent transparent;
    }

    /* Fix the circle for containers on the right side */
    .right::after {
      left: -16px;
    }

    /* The actual content */
    .content {
      padding: 20px 30px;
      background-color: var(--color-background-offset);
      position: relative;
      border-radius: 6px;
      width: 250%;
    }

    /* Media queries - Responsive timeline on screens less than 600px wide */
    @media screen and (max-width: 600px) {
      /* Place the timelime to the left */
      .timeline::after {
        left: 31px;
      }

      /* Full-width containers */
      .container {
        width: 100%;
        padding-left: 70px;
        padding-right: 25px;
      }

      /* Make sure that all arrows are pointing leftwards */
      .container::before {
        left: 60px;
        border: medium solid white;
        border-width: 10px 10px 10px 0;
        border-color: transparent white transparent transparent;
      }

      /* Make sure all circles are at the same spot */
      .left::after,
      .right::after {
        left: 15px;
      }

      /* Make all right containers behave like the left ones */
      .right {
        left: 0%;
      }
      .content {
        width: 100%;
      }
    }
  </style>
</html>
