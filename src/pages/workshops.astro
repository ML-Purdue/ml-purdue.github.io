---
import "@fontsource/inter/variable.css";
import ContentSection from "~/components/content-section.astro";
import Spacer from "~/components/Spacer.astro";
import Footer from "~/components/footer.astro";
import Header from "~/components/header.astro";
import "~/styles/index.css";
import { workshopItems } from "~/data-entries";

const { site } = Astro;
const description = "ML@Purdue Website";
---

<!DOCTYPE html>
<html lang="en" class="h-full motion-safe:scroll-smooth" data-theme="dark">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <!-- <meta name="generator" content={generator} /> -->
    <title>ML@Purdue - Workshops</title>
    <meta name="description" content={description} />
    <meta property="og:title" content="ML@Purdue" /><meta
      property="og:type"
      content="website"
    /><meta property="og:description" content={description} /><meta
      property="og:image"
      content="/social.png"
    /><meta property="og:url" content={site} /><meta
      name="twitter:card"
      content="summary_large_image"
    /></head
  >

  <!-- social media -->

  <body
    class="h-full overflow-x-hidden bg-default text-default text-base selection:bg-secondary selection:text-white"
  >
    <Header fixed />
    <br />
    <article class="pt-10 mt-11 w-[90vw] max-w-[80ch]">
        <ContentSection id="workshops" title="WORKSHOPS">
            <div
                class="flex w-screen border-y-[1px] border-purple-500 -mt-6 py-6"
            >
                <p class="max-w-[75%] pl-8 text-sm">
                  Our workshops are open to everyone! These last about 60-90 minutes and provide an interactive learning experience for those in the audience. Stay tuned for upcoming workshops.
                </p>
            </div>
        </ContentSection>

        <Spacer y={150} />
        <ContentSection id="workshopArchive" title="ARCHIVE">
            <div
              class="flex w-screen border-y-[1px] border-purple-500 -mt-6 py-6"
            >
                <p class="max-w-[75%] pl-8 text-sm">
                  Workshops are held on the weekends. The exact timing will be posted in an announcement on our Discord server and Instagram page.
                </p>
            </div>
            {
                workshopItems.map(({ date, topic, leading, status }) => (
                    <section class="relative flex w-screen border-b-[1px] border-purple-500 -mt-4">
                        <div class="flex flex-col justify-between items-end w-[30vw] lg:w-[26vw] text-right p-2 lg:p-4">
                            <h2 class="text-xs lg:text-sm leading-snug mb-2">{date}</h2>
                            <span class="bg-purple-900 ml-3 text-white rounded-md py-1 px-4 text-xs leading-snug">
                                {status}
                            </span>
                        </div>

                        <div class="flex flex-col lg:justify-center py-4 h-full pl-2 lg:pl-4 border-purple-500 border-l-[1px] max-w-[63vw]">
                            <span class="orbitron text-xl leading-tight">{topic}</span>
                            <h2 class="text-sm lg:text-base mt-2">{leading}</h2>
                        </div>
                    </section>
                ))
            }
        </ContentSection>
    </article>
    <Footer />
  </body>
</html>