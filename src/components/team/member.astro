---
export interface Props {
  fullname: string;
  title: string;
  major: string;
  year: string;
  url?: string;
}
const { fullname, title, major, year, url } = Astro.props;

// just debug, remove if causes an issue
const n = `data-title`;
const sp = { [n]: title };
---

<div {...sp}>
  <div class="flex w-full flex-col text-center">
    <h2 class="font-semibold tracking-tight text-white text-2xl">
      <span>{fullname}</span>
    </h2>
    <span class="capitalize text-lg">
      {
        url ? (
          <a
            href={url}
            target="_blank"
            class="m-2 inline-block rounded-full bg-purple-900 py-2 px-5 font-semibold capitalize text-sm hover:bg-purple-200"
          >
            {title}
          </a>
        ) : (
          <span class="inline-block capitalize underline decoration-dotted text-lg">
            {title}
          </span>
        )
      }
    </span>
    <div class="flex items-center justify-center gap-2">
      <span class="text-md capitalize">
        Major: {major}
      </span>
      <div class="h-5 border-l-2 border-dotted border-purple-400"></div>
      <span class="text-md capitalize">
        Grade: {year}
      </span>
    </div>
  </div>
  <p class="max-w-xl text-center font-extrabold text-2xl">
    <slot />
  </p>
</div>
